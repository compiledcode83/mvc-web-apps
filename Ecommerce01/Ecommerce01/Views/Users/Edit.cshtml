                @*@Html.ValidationMessageFor(model => model.DateBirth, "", new { @class = "text-danger" })*@
            
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
