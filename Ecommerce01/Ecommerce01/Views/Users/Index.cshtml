@model IEnumerable<Ecommerce01.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Utenti</h2>

<p>
    @Html.ActionLink("Crea", "Create", new { }, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.City.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departament.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Province.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.City.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departament.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Province.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        @*<td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>

        <td>
            @if (!string.IsNullOrEmpty(item.Photo))
                {
                <img src="@Url.Content(item.Photo)" alt="Image" style="width:400px;height:400px;max-width: 100%; height: auto;" />
            }
        </td>
    </tr>
        <tr>
            <td colspan="5">
                @Html.ActionLink("Modifica", "Edit", new { id = item.UserId }, new { @class = "btn btn-info" })
                @Html.ActionLink("Altri Dettagli", "Details", new { id = item.UserId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Elimina", "Delete", new { id = item.UserId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
</table>


 